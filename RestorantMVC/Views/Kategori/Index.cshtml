@model ICollection<Kategori>

<h4>Kategori Sayafası</h4>

<a class="btn btn-success" asp-action="Add">Ekle</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.KategoriAdi</td>
                <td>@item.KategoriAciklama</td>
                <td>
                    <a class="btn btn-primary" asp-route-id="@item.ID" asp-action="Update">Güncelle</a>
                    <a class="btn btn-warning" asp-route-id="@item.ID" asp-action="Delete">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>