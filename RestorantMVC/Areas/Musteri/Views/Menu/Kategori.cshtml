@model ICollection<Urun>

@{
    ViewData["Title"] = "Ekle";
}

<section id="our_menu" class="pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page_title text-center mb-4">
                    <h1>our menu</h1>
                    <div class="single_line"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <ul class="nav nav-tabs menu_tab mb-4" id="myTab" role="tablist">
                @for (int i = 0; i < @ViewBag.Firma.Count; i++)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Menu" asp-action="Kategori" asp-route-id="@ViewBag.Firma[i].SelfKategoriID">@ViewBag.Firma[i].KategoriAdi</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Siparis" asp-action="Index">Sepet</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="tab-content col-lg-12" id="myTabContent">
                <div class="tab-pane fade show active" id="breakfast" role="tabpanel" aria-labelledby="breakfast-tab">
                    <div class="row">
                        <div class="col-md-6">

                                @foreach (var item in Model)
                                {
                                <div class="single_menu">
                                    <div class="col-sm c-item">
                                        <img src="@item.FotografLink" alt="burger">
                                        <div class="menu_content">
                                            <h4>@item.UrunAdi  <span>@item.Fiyat TL</span></h4>
                                            <p>@item.UrunAciklama</p>
                                            <a class="btn btn-ekle" asp-action="Ekle" asp-route-id="@item.ID">Ekle</a>
                                        </div>
                                    </div>
                                </div>
                                }
                            
                        </div>
                    </div>
                </div>
            <a href="#" class=" menu_btn btn btn-danger">view more</a>
        </div>
    </div>
</section>



