@model RestorantMVC.Areas.Admin.Models.QRCodeModel;

<form asp-action="QRKodOlustur">
    @if (ViewBag.QrCodeUri == null)
    {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QRCodeText" class="control-label">Oluşturmak istediğiniz Masa Numarasını giriniz:</label>
                <input asp-for="QRCodeText" class="form-control"/>
                <span asp-validation-for="QRCodeText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="QR Oluştur" class="btn btn-primary text-center" />
            </div>
        
    }
    <div class="form-group">
        @if(ViewBag.QrCodeUri != null)
        {
            <img src="@ViewBag.QrCodeUri" class="img-thumbnail" width="512" height="512" />
        }
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}