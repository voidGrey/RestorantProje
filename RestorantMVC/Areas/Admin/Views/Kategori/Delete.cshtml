@model Entites.Concrate.Kategori

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Kategoriyi silmek istediğinize emin misiniz?</h4>
        <div class="form-group row">
            <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Kategori Adı</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="exampleInputUsername2" placeholder="@Model.KategoriAdi" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Kategori Açıklaması</label>
            <div class="col-sm-9">
                <input type="email" class="form-control" id="exampleInputEmail2" placeholder="@Model.KategoriAciklama" disabled>
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Sil" class="btn btn-danger btn-fw" />
            <a asp-action="Index" class="btn btn-secondary btn-fw mdi mdi-backburger">Listeye geri dön</a>
        </form>
    </div>
</div>
