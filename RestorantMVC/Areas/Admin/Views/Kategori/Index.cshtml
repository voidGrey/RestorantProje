@model IEnumerable<Entites.Concrate.Kategori>

@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-primary btn-icon-text">
        <i class="mdi mdi-file-check btn-icon-prepend"></i> Yeni Kategori Oluştur 
</a>
<div class="dropdown-divider"></div>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Kategori Adı
                </th>
                <th>
                    Kategori Açıklaması
                </th>
                <th>
                    Oluşturma Tarihi
                </th>
                <th>
                    Güncellenme Tarihi
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KategoriAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KategoriAciklama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateTime)
                </td>
                <td>
                    <a class="badge badge-outline-success" asp-action="Edit" asp-route-id="@item.ID">Düzenle</a> 
                    <a class="badge badge-outline-warning" asp-action="Details" asp-route-id="@item.ID">Ayrıntılar</a> 
                    <a class="badge badge-outline-danger" asp-action="Delete" asp-route-id="@item.ID">Sil</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>