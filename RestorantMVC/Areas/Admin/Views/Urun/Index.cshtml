@model IEnumerable<Entites.Concrate.Urun>

@{
    ViewData["Title"] = "Index";
}


<a asp-action="Create" class="btn btn-primary btn-icon-text">
        <i class="mdi mdi-file-check btn-icon-prepend"></i> Yeni Ürün Oluştur
</a>
<div class="dropdown-divider"></div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Ürün Adı
            </th>
            <th>
                Ürün Açıklaması
            </th>
            <th>
                Ürün Görseli
            </th>
            <th>
                Ürün Fiyatı
            </th>
            <th>
                Ürün Kategorisi
            </th>
            <th>
                Oluşturma Tarihi
            </th>
            <th>
                Güncellenme Tarihi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAdi)
            </td>
            <td>
                    @if (item.UrunAciklama != null)
                    {
                        if (item.UrunAciklama.Length > 60)
                        {
                            @item.UrunAciklama.Substring(0,60)
                            <b>...</b>
                        }
                        else
                        {
                            @item.UrunAciklama
                        }
                    }

                </td>
                @if (item.FotografLink !=null)
                    {
                        <td>Fotoğraf mevcut </td>
                    }
                    else
                    {
                    <td>Fotoğraf mevcut değil ! </td>
                    }
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat) TL
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateTime)
            </td>
            <td>
                <a class="badge badge-outline-success" class="badge badge-outline-danger" asp-action="Edit" asp-route-id="@item.ID">Düzenle</a> 
                <a class="badge badge-outline-warning" asp-action="Details" asp-route-id="@item.ID">Detaylar</a> 
                <a class="badge badge-outline-danger" asp-action="Delete" asp-route-id="@item.ID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
